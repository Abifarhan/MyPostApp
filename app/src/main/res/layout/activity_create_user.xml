<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CreateUserActivity">

    <EditText
        android:id="@+id/edt_email_register"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_pw_register"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="pw"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/edt_email_register"
        app:layout_constraintStart_toStartOf="@+id/edt_email_register"
        app:layout_constraintTop_toBottomOf="@+id/edt_email_register" />

    <EditText
        android:id="@+id/edt_username_register"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/edt_pw_register"
        app:layout_constraintStart_toStartOf="@+id/edt_pw_register"
        app:layout_constraintTop_toBottomOf="@+id/edt_pw_register" />

    <Button
        android:id="@+id/btn_create_account_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Create an Account"
        app:layout_constraintEnd_toEndOf="@+id/edt_username_register"
        app:layout_constraintStart_toStartOf="@+id/edt_username_register"
        app:layout_constraintTop_toBottomOf="@+id/edt_username_register" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Cancel"
        app:layout_constraintEnd_toEndOf="@+id/btn_create_account_register"
        app:layout_constraintStart_toStartOf="@+id/btn_create_account_register"
        app:layout_constraintTop_toBottomOf="@+id/btn_create_account_register" />
</androidx.constraintlayout.widget.ConstraintLayout>