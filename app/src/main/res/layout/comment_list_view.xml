<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView_name_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_date_of_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Date of comment"
        app:layout_constraintBottom_toBottomOf="@+id/textView_name_comment"
        app:layout_constraintStart_toEndOf="@+id/textView_name_comment"
        app:layout_constraintTop_toTopOf="@+id/textView_name_comment" />

    <TextView
        android:id="@+id/textView_comment_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="This is the comment"
        app:layout_constraintStart_toStartOf="@+id/textView_name_comment"
        app:layout_constraintTop_toBottomOf="@+id/textView_name_comment" />

    <ImageView
        android:id="@+id/imageView_action_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_date_of_comment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView_date_of_comment"
        app:srcCompat="@drawable/ic_action_for_comment" />
</androidx.constraintlayout.widget.ConstraintLayout>